# description	: Provides a series of utilities for media devices
# depends	: v4l-utils eudev-32

name=v4l-utils-32
version=1.26.1
release=1
source="https://www.linuxtv.org/downloads/v4l-utils/v4l-utils-$version.tar.xz"

build() {

	venom-meson ${name%-*}-$version build \
		--libdir=/usr/lib32 \
		-Dgconv=disabled
	meson compile -C build
	DESTDIR=$PWD/DESTDIR meson install --no-rebuild -C build

	mkdir -p $PKG/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* $PKG/usr/lib32
}
